SET VERIFY OFF

ACCEPT P_DEPTNO PROMPT ' DEPTNO : ';
ACCEPT P_LOC PROMPT ' LOC : ';

DECLARE
    V_DEPTNO NUMBER(2) := &P_DEPTNO;
    V_LOC VARCHAR2(13) := '&P_LOC';

BEGIN
    UPDATE DEPT
    SET LOC = V_LOC
    WHERE DEPTNO = V_DEPTNO;
    
    COMMIT;
END;
/
SET VERIFY ON

SELECT * FROM DEPT ORDER BY DEPTNO;
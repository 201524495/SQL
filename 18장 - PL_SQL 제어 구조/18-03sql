/**

*/

SET VERIFY OFF
SET SERVEROUTPUT ON

DECLARE 
    V_ENAME EMP.ENAME%TYPE := '&P_ENAME';
   -- V_EMPNO EMP.EMPNO%TYPE;
    V_SAL EMP.SAL%TYPE;
    V_STAR VARCHAR2(20);
    
BEGIN
    SELECT ENAME ,RPAD('*', TRUNC(TO_NUMBER(SAL)/200), '*')
           , TRUNC(TO_NUMBER(SAL)/200)
        INTO V_ENAME, V_STAR, V_SAL
    FROM EMP
    WHERE ENAME = V_ENAME;
    
    DBMS_OUTPUT.PUT_LINE(V_ENAME || '  ' || V_STAR || '  ' || V_SAL);

END;
/
SET VERIFY ON
SET SERVEROUTPUT OFF
/**

*/
create or replace NONEDITIONABLE PROCEDURE emp_ename_dname(
	V_ENAME IN EMP.ENAME%TYPE , -- 
	V_DNAME OUT DEPT.DNAME%TYPE -- 
)

IS
	V_DEPTNO EMP.DEPTNO%TYPE; -- 
BEGIN
	SELECT   E.DEPTNO
	  INTO   V_DEPTNO
	FROM EMP E
	WHERE E.ENAME = V_ENAME;

	SELECT D.DNAME
	  INTO V_DNAME
	FROM DEPT D
	WHERE D.DEPTNO = V_DEPTNO;


end emp_ename_dname;
/

VAR G_ENAME VARCHAR2(14);
VAR G_DNAME VARCHAR2(14);
EXECUTE EMP_ENAME_DNAME('CHO', :G_DNAME);
PRINT G_DNAME;
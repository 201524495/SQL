/**

*/

create or replace NONEDITIONABLE FUNCTION F_deptno_max_sal(
	V_DEPTNO IN EMP.DEPTNO%TYPE 
	--,V_SAL OUT EMP.SAL%TYPE 
)
RETURN NUMBER
IS
	V_ENAME EMP.ENAME%TYPE;
    V_SAL EMP.SAL%TYPE ;
BEGIN
	SELECT  MAX(SAL)
	  INTO   V_SAL
	FROM EMP E
	WHERE E.DEPTNO = V_DEPTNO;

    DBMS_OUTPUT.PUT_LINE(V_DEPTNO || '`S MAX SAL :  ' || V_SAL);
    RETURN V_SAL;

end F_deptno_max_sal;
/

VAR G_SAL NUMBER;
EXECUTE :G_SAL := F_DEPTNO_MAX_SAL(40);
PRINT G_SAL;
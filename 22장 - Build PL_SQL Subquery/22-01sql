/**

*/

create or replace NONEDITIONABLE PROCEDURE EMP_REG (

	V_EMPNO  IN EMP.EMPNO%TYPE ,
	V_ENAME  IN EMP.ENAME%TYPE ,
	V_JOB 	 IN EMP.JOB%TYPE   ,
	V_MGR	 IN EMP.MGR%TYPE   ,
    	V_SAL    IN EMP.SAL%TYPE   ,
	V_COMM	 IN EMP.COMM%TYPE  ,
    	V_DEPTNO IN EMP.DEPTNO%TYPE
)

is  -- NOT DECLARE
	MANAGER_ERROR EXCEPTION;

BEGIN
    INSERT INTO EMP
        VALUES (V_EMPNO, V_ENAME, V_JOB,
                V_MGR, SYSDATE, V_SAL, V_COMM, V_DEPTNO);
EXCEPTION
    WHEN MANAGER_ERROR THEN
        DBMS_OUTPUT.PUT_LINE('WRONG JOB');
    WHEN NO_DATA_FOUND THEN
        DBMS_OUTPUT.PUT_LINE('WRONG MANAGER');
    WHEN OTHERS THEN
        DBMS_OUTPUT.PUT_LINE('ETC ERROR');
END EMP_REG;
/

SET SERVEROUTPUT ON
EXECUTE EMP_REG(22, 'CHO', 'MID', 3, 9999, 9999, 40);
SELECT * FROM EMP;
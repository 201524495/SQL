SELECT EMPNO--, MAX(SAL), ENAME
		--INTO V_EMPNO--, V_SAL, V_ENAME
	FROM EMP
	WHERE SAL = (SELECT MAX(SAL) FROM EMP);


create or replace NONEDITIONABLE PROCEDURE emp_max_sal (
    V_EMPNO out EMP.EMPNO%TYPE
)
IS
	V_ENAME  EMP.ENAME%TYPE ;
	V_SAL EMP.SAL%TYPE ;
BEGIN
	SELECT EMPNO--, MAX(SAL), ENAME
		INTO V_EMPNO--, V_SAL, V_ENAME
	FROM EMP
	WHERE SAL = (SELECT MAX(SAL) FROM EMP);

end emp_max_sal;
/

VAR G_EMPNO NUMBER;
EXECUTE EMP_MAX_SAL(:G_EMPNO);
PRINT G_EMPNO;
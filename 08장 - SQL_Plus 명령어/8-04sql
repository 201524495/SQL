/**

*/

BREAK ON DNAME SKIP 1 ON REPORT

SELECT D.DNAME "DEPARTMENT NAME", E.ENAME "EMPLOYEE NAME",
    TO_CHAR(E.HIREDATE, 'DD-MON-YY') "START DATE",
    TO_CHAR(E.SAL, '$99,999.99') 
    "SALARY", TO_CHAR(E.SAL*12, '$99,999.99') "ANNUAL SALARY"
FROM EMP E
JOIN DEPT D
ON E.DEPTNO = D.DEPTNO
WHERE D.LOC = '&P_LOC';